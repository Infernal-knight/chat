{% extends 'SonataPageBundle::base_layout.html.twig' %}

{% block sonata_page_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/chat.css') }}" type="text/css" media="all"  />
{% endblock %}

{% block sonata_page_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/lazyload.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        var chat_url = "ws://{{ app.request.host }}:8080";
        setInterval(function () {
            $.get('{{ path('app_default_ping') }}');
        }, 10*60*1000);
    </script>
    {{ clank_client() }}
    <script src="{{ asset('bundles/app/js/chat.js') }}" type="text/javascript"></script>

{% endblock %}

{% block sonata_page_container %}

    <nav class="navbar navbar-default main-navbar">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-panel">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Chat &#x2680;&#x2682;</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="top-panel">
                {{ sonata_block_render({ 'type': 'app.block.user_login' }) }}
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="wrapper">
        <div class="box">

                {% block page_content %}
                    {% if content is defined %}
                        {{ content|raw }}
                    {% else %}
                        {% set content = block('content') %}
                        {% if content|length > 0 %}
                            {{ content|raw }}
                        {% elseif page is defined %}
                            {{ sonata_page_render_container('content', page) }}
                        {% endif %}
                    {% endif %}
                {% endblock %}

        </div>
    </div>
{% endblock %}
